@page
@model WebApplication7.Pages.Tareas.guardarModel
@{
    ViewData["Title"] = "Guardar Tareas!";
}
<div class="card-body">
            <!--Formularios de recepcion de datos-->
    <form method="post">
        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="tareaGuardable.Titulo"></label>
            </div>
            <div>
                <input asp-for="tareaGuardable.Titulo" class="form-control" />
            </div>
            <span asp-validation-for="tareaGuardable.Titulo" class="text-danger" />
        </div>
        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="tareaGuardable.CategoriaID"></label>
            </div>
            <div>
                <input asp-for="tareaGuardable.CategoriaID" class="form-control" />
            </div>
            <span asp-validation-for="tareaGuardable.CategoriaID" class="text-danger" />
        </div>
        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="tareaGuardable.Descripcion"></label>
            </div>
            <div>
                <input asp-for="tareaGuardable.Descripcion" class="form-control" />
            </div>
            <span asp-validation-for="tareaGuardable.Descripcion" class="text-danger" />
        </div>
        <div class="container" style="padding:30px">
            <div class="form-group">
                <label asp-for="tareaGuardable.EstadoTarea"></label>
            </div>
            <div>
                <input asp-for="tareaGuardable.EstadoTarea" class="form-control" />
            </div>
            <span asp-validation-for="tareaGuardable.EstadoTarea" class="text-danger" />
        </div>
                        <!--Botones para enviar los datos y volver al listado-->

        <div class="container" style="padding:30px">
            <div class="form-group">
                <input type="submit" value="guardar" class="btn btn-success form-control" />
            </div>
            <div>
                <a asp-page="Index" class="btn btn-light"> Volver al listado </a>
            </div>
        </div> 
    </form>
</div>